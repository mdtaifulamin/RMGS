export const EfficienciesContext = createContext({
    efficiencies: [],
    addEfficiency: ({date,lineNumber,totallineproduction,toallinehour,totallineavailableminute,netlineavailableminute,totalearnedminute,linemanpower,totallosttimeminute,remarks,target,hitrate,efficiency,performance,St1Name,st1Buyer,style1SMV,style1Production,style1without,style1due,style1rejection,style1Totalproduction,St2Name,st2Buyer,style2SMV,style2Production,style2without,style2due,style2rejection,style2Totalproduction,St36Name,st3Buyer,style3SMV,style3Production,style3without,style3due,style3rejection,style3Totalproduction,St4Name,st4Buyer,style4SMV,style4Production,style4without,style4due,style4rejection,style4Totalproduction}) => {},
    deleteEfficiency: (id) => {},
    updateEfficiency: (id,{date,lineNumber,totallineproduction,toallinehour,totallineavailableminute,netlineavailableminute,totalearnedminute,linemanpower,totallosttimeminute,remarks,target,hitrate,efficiency,performance,St1Name,st1Buyer,style1SMV,style1Production,style1without,style1due,style1rejection,style1Totalproduction,St2Name,st2Buyer,style2SMV,style2Production,style2without,style2due,style2rejection,style2Totalproduction,St36Name,st3Buyer,style3SMV,style3Production,style3without,style3due,style3rejection,style3Totalproduction,St4Name,st4Buyer,style4SMV,style4Production,style4without,style4due,style4rejection,style4Totalproduction}) => {},
});

function efficienciesReducer(state,action){
    switch (action.type) {
        case 'ADD':
            const id = date+'-'+lineNumber;
            return [{...action.payload, id: id},...state];     
        case 'UPDATE':
            const updatableEfficiencyIndex = state.findIndex(
                (efficiency) => efficiency.id === action.payload.id
            );
            const updatableEfficiency = state[updatableEfficiencyIndex];
            const updatedItem = {...updatableEfficiency,...action.payload.data};
            const updatedEfficiencies= [...state];
            updatedEfficiencies[updatableEfficiencyIndex] = updatedItem;
            return updatedEfficiencies;
        case 'DELETE':
            return state.filter((efficiency) => efficiency.id !== action.payload);                
        default:
            return state;
    }
}

function EfficienciesContextProvider ({children}){
 const [efficiencyState,dispatch] = useReducer(efficienciesReducer,Dummy_efficiencies);
   
 function addEfficiency(efficiencyData){
        dispatch({type:'ADD', payload: efficiencyData});
    }

    function deleteEfficiency(id){
        dispatch({type: 'DELETE' , payload : id});
    }
    function updateEfficiency(id, efficiencyData){
        dispatch({type:'UPDATE', payload:{id: id, data: efficiencyData}});
    }

    const value = {
        efficiencies: efficiencyState,
        addEfficiency: addEfficiency,
        deleteEfficiency: deleteEfficiency,
        updateEfficiency: updateEfficiency,
    };

    return (
        <EfficienciesContext.Provider value={value}>
              {children}
        </EfficienciesContext.Provider>
    )
}

export default EfficienciesContextProvider;